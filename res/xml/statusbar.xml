<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_category"
    android:layout="@layout/preference_tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <ListPreference
            android:key="smart_pulldown"
            android:title="@string/smart_pulldown_title"
            android:entries="@array/smart_pulldown_entries"
            android:entryValues="@array/smart_pulldown_values"
            android:persistent="false" />

    <PreferenceScreen
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_category"
            android:layout="@layout/preference_battery_style"
            android:fragment="com.android.settings.Legend.StatusbarBatteryStyle" />

    <PreferenceScreen
        android:key="network_traffic_state"
        android:fragment="com.android.settings.Legend.NetworkTraffic"
        android:summary="@string/network_traffic_summary"
        android:title="@string/network_traffic_title" />

</PreferenceScreen>
